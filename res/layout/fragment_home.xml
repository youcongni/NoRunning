<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <ImageButton
            android:id="@+id/image_presonal_info"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:paddingBottom="10sp"
            android:src="@drawable/use1" />
    </LinearLayout>

  

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="#FFFFFF"
              android:layout_marginTop="1dp"   >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="平均心率:次/分钟" />

            <TextView
                android:id="@+id/tv_aveHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="13dp"
                android:text="0" />
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="#FFFFFF"
              android:layout_marginTop="1dp"   >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/timer" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="平均速率:m/s" />

            <TextView
                android:id="@+id/tv_aveSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="13dp"
                android:text="0.00" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="1dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/runmeter" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="总路程:km" />

            <TextView
                android:id="@+id/tv_toDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="13dp"
                android:text="0.00" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="#FFFFFF"
              android:layout_marginTop="1dp"   >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tm" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="总计时:" />

            <TextView
                android:id="@+id/tv_toTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="129dp"
                android:layout_marginTop="13dp"
                android:text="0.0" />
        </LinearLayout>
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="center"
        
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_start_running"
            android:layout_width="177dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            
          
            android:background="#FF0000"
            android:text="开始跑步"
            android:textSize="30sp"
            android:textColor="@color/white" />

       

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
      
        android:layout_alignParentBottom="true">
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dip"
                android:background="#CCCCFF"
                android:layout_alignParentBottom="true" >

               <ImageButton
                android:id="@+id/image_presonal_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:src="@drawable/target" />
           		<TextView  
       			android:layout_width="wrap_content"  
        		android:layout_height="wrap_content"  
        		android:layout_weight="1" />  
				<ImageButton
                android:id="@+id/image_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:src="@drawable/music" />

           
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:background="#CCCCFF" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="12sp"
                android:text="运动监控"
                android:textColor="#000000"
                android:textSize="15sp"
                 android:background="#CCCCFF" />

      		  <TextView
      		      android:layout_width="wrap_content"
      		      android:layout_height="wrap_content"
      		      android:layout_weight="1" />
  
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CCCCFF"
               android:layout_marginRight="20dip"
                android:text="音乐"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>
   
</LinearLayout>